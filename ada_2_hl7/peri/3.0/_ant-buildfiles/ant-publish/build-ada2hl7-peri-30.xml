<?xml version="1.0" encoding="UTF-8"?>
<!-- Apache ANT build file that sets up (target = setup) or by default converts transaction with references to full ada xml (target = resolve-refs)
    Apache ANT is based on Java and may be found here: https://ant.apache.org/
    run on command line or from a batch file: 
        ant [-f build.xml] [target]
        
    If you just run ant, it expects a build.xml in the working dir and runs the default target.
-->
<project basedir="." default="convert_ada_2_hl7_peri30" name="build-ada2hl7-peri-30" xmlns:if="ant:if" xmlns:unless="ant:unless">
    <property name="is.version" value="3.0"/>
    <property name="is.version.short" value="30"/>
    <property name="date.T" value="2021-01-01"/>
    
    <property name="ada.project.source.dir" value="C:\SVN\art_decor\trunk\ada-data\projects\perinatologie"/>
    <property name="instance.dir" value="C:\SVN\art_decor\trunk\ada-data\production-ada-instances\peri\3.0\data"/>    
    
    <property name="schema.cda" value="${build.dir}/../../../../../../../../../SVN/AORTA/branches/Onderhoud_Mp_v90/Publicaties/20210921/mp-xml-20210921T194523/schemas_codeGen_flat/CDANL_extended.xsd"/>
    
        
    <!-- place import after properties, otherwise it can't resolve the properties used. -->
    <import file="../../../_ant-buildfiles/ant-publish/build-ada2hl7-peri-include.xml"/>
    
    <property name="usecase.kn" value="kernset_neonatologie"/>
    

    <target name="setup_peri30" description="Setup subdirectories, schemas, ada instance xml's in ${build.dir} for ${is.name} ${is.version}">

        <!-- kernset_neonatologie  -->  
        <antcall target="setup_sub_schemas">
            <param name="schema.string" value="*${usecase.kn}.xsd"/>
            <param name="usecase" value="${usecase.kn}"/>
        </antcall>
        
        <echo/>
        <echo>Setup ${build.dir}/${usecase.kn} containing refreshed ada production instances (*.xml)</echo>
        
        <mkdir dir="${build.dir}/${usecase.kn}/ada_instance"/>
        <delete>
            <fileset dir="${build.dir}/${usecase.kn}/ada_instance" includes="*.xml"/>
        </delete>
        <copy todir="${build.dir}/${usecase.kn}/ada_instance" failonerror="true">
            <fileset dir="${instance.dir}">
                <include name="*.xml"/>
            </fileset>
        </copy>
     
    </target>
 
    <target name="convert_ada_2_hl7_peri30">

        <!-- convert kernset_neonatologie -->
        <antcall target="convert_ada_2_hl7_sub">
            <param name="sub.build.dir" value="${build.dir}/${usecase.kn}"/>
            <param name="xsl.name" value="payload/CDA_Kernset_Neo_30.xsl"/>
            <param name="xsl.in" value="ada_instance"/>
            <param name="xsl.out" value="cda_instance"/>
        </antcall>
    </target>
    
    <target name="schemavalidate_hl7_30">
        
         <!-- all use cases cda_instance-->
        <antcall target="schemavalidate_hl7_sub">
            <param name="fileset.include" value="**/cda_instance/*.xml"/>
            <param name="fileset.exclude" value="nictiz_test/**/*"/>
            <param name="validate.schema" value="${schema.cda}"/>
        </antcall>
        
    </target>

 </project>
