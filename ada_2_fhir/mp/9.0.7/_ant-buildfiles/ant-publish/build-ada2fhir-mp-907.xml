                <fileset refid="inputFiles"/>
                <factory name="${xsl.saxon.class}"/>
                <classpath location="${xsl.saxon}"/>
            </xslt>
        </sequential>-->

        <echo>convert_ada_2_fhir_907. MedMij stuff beschikbaarstellen_medicatiegegevens for POC Praktijktest</echo>
        <antcall target="convert_ada_2_fhir_sub">
            <param name="usecase" value="${usecase.mg}"/>
            <param name="xsl.in" value="ada_instance_POCPraktijktest"/>
            <param name="xsl.out" value="fhir_instance_POCPraktijktest"/>
        </antcall>

        <!-- copy the appropriate fhir instances for Touchstone to a separate folder, to ease upload to Touchstone -->
        <echo>copy the appropriate fhir instances for Touchstone to a separate folder</echo>
        <mkdir dir="${build.dir}/4TouchstoneMPServe"/>
        <!-- clean previous results, if any -->
        <delete>
            <fileset dir="${build.dir}/4TouchstoneMPServe" includes="*.xml"/>
        </delete>
        <copy todir="${build.dir}/4TouchstoneMPServe">
            <fileset dir="${build.dir}/${usecase.mo}/fhir_instance_mp" includes="mo-mor*.xml"/>
            <fileset dir="${build.dir}/${usecase.mo}/fhir_instance_mp" includes="mp9-nl-core-patient-*.xml"/>
            <fileset dir="${build.dir}/${usecase.mg}/fhir_instance_VV" includes="mp9-*.xml"/>
            <fileset dir="${build.dir}/${usecase.mg}/fhir_instance_MA" includes="mp9-*.xml"/>
        </copy>
        
        

    </target>

    <target name="convert_ada_2_fhir_examples_907">

        <!-- 907 specific examples -->
        <!-- beschikbaarstellen_verstrekkingenvertaling -->
        <sequential>
            <fileset id="inputfilesMP" dir="${build.dir}/xml-voorbeelden/ada_instance" includes="vv*.xml"/>

            <echo/>
            <echo>${echo.label} ${build.dir}/${usecase.vv}/payload/${usecase.vv}_2_fhir_resources.xsl input dir ${build.dir}/xml-voorbeelden/ada_instance</echo>
            <xslt force="true" style="${build.dir}/${usecase.vv}/payload/${usecase.vv}_2_fhir_resources.xsl" destdir="${build.dir}/xml-voorbeelden/fhir_instance" extension=".xml" useimplicitfileset="false">
                <fileset refid="inputfilesMP"/>
                <param name="generateInstructionText" expression="true"/>
                <param name="dateT" expression="${date.T}" if="date.T"/>
                <factory name="${xsl.saxon.class}"/>
                <classpath location="${xsl.saxon}"/>
            </xslt>

            <echo/>
            <echo>${echo.label} input files ${build.dir}/xml-voorbeelden/ada_instance, to be converted with: ${build.dir}/${usecase.vv}/payload/${usecase.vv}_2_fhir.xsl</echo>
            <xslt force="true" style="${build.dir}/${usecase.vv}/payload/${usecase.vv}_2_fhir.xsl" destdir="${build.dir}/xml-voorbeelden/fhir_instance" extension=".xml" useImplicitFileset="false">
                <fileset refid="inputfilesMP"/>
                <param name="generateInstructionText" expression="true"/>
                <param name="dateT" expression="${date.T}" if="date.T"/>
                <factory name="${xsl.saxon.class}"/>
                <classpath location="${xsl.saxon}"/>
            </xslt>
        </sequential>

    </target>



</project>
