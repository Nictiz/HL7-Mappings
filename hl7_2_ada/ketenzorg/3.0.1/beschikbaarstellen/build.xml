    <target name="convert_hl7v3_2_ada">
        <property name="xsl.saxon" value="/Users/ahenket/Development/lib/SaxonPE9-7-0-20J/saxon9pe.jar"/>
        
        <property name="xsl_allergyintolerance" value="payload/beschikbaarstellen_allergieintoleranties_2_ada.xsl"/>
        <property name="xsl_episodes" value="payload/beschikbaarstellen_episode_2_ada.xsl"/>
        <property name="xsl_contactverslagen" value="payload/beschikbaarstellen_contactverslagen_2_ada.xsl"/>
        <property name="xsl_algemene_bepalingen" value="payload/beschikbaarstellen_algemene_bepalingen_2_ada.xsl"/>
        
        <property name="xsl.input" value="hl7v3_instance"/>
        <property name="xsl.output" value="ada_instance"/>
        
        <echo>Deleting previous results, if any</echo>
        <delete dir="${xsl.output}"/>
        
        <sequential>
            <fileset id="inputfilesAllergieIntoleranties" dir="${xsl.input}" includes="hl7v3_allergieintoleranties*.xml"/>
            <fileset id="inputfilesEpisodes" dir="${xsl.input}" includes="hl7v3_episodes*.xml"/>
            <fileset id="inputfilesContactverslagen" dir="${xsl.input}" includes="hl7v3_contactverslag*.xml"/>
            <fileset id="inputfilesAlgemeneBepalingen" dir="${xsl.input}" includes="hl7v3_algemene_bepalingen*.xml"/>
            
            <echo>HL7v3_2_ADA ${xsl_allergyintolerance}</echo>
            <xslt force="true" style="${xsl_allergyintolerance}" destdir="${xsl.output}" extension=".xml" useImplicitFileset="false">
                <!--<param name="allow-foreign" expression="true"/>-->
                <fileset refid="inputfilesAllergieIntoleranties"/>
                <factory name="net.sf.saxon.TransformerFactoryImpl"/>
                <classpath location="${xsl.saxon}"/>
            </xslt>
            
            <echo>HL7v3_2_ADA ${xsl_episodes}</echo>
            <xslt force="true" style="${xsl_episodes}" destdir="${xsl.output}" extension=".xml" useImplicitFileset="false">
                <!--<param name="allow-foreign" expression="true"/>-->
                <fileset refid="inputfilesEpisodes"/>
                <factory name="net.sf.saxon.TransformerFactoryImpl"/>
                <classpath location="${xsl.saxon}"/>
            </xslt>
            
            <echo>HL7v3_2_ADA ${xsl_contactverslagen}</echo>
            <xslt force="true" style="${xsl_contactverslagen}" destdir="${xsl.output}" extension=".xml" useImplicitFileset="false">
                <!--<param name="allow-foreign" expression="true"/>-->
                <fileset refid="inputfilesContactverslagen"/>
                <factory name="net.sf.saxon.TransformerFactoryImpl"/>
                <classpath location="${xsl.saxon}"/>
            </xslt>
            
            <echo>HL7v3_2_ADA ${xsl_algemene_bepalingen}</echo>
            <xslt force="true" style="${xsl_algemene_bepalingen}" destdir="${xsl.output}" extension=".xml" useImplicitFileset="false">
                <!--<param name="allow-foreign" expression="true"/>-->
                <fileset refid="inputfilesAlgemeneBepalingen"/>
                <factory name="net.sf.saxon.TransformerFactoryImpl"/>
                <classpath location="${xsl.saxon}"/>
            </xslt>
        </sequential>
    </target>
    
