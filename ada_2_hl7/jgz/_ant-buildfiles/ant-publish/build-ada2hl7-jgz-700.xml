<?xml version="1.0" encoding="UTF-8"?>
<!-- Apache ANT build file that sets up (target = setup) or by default converts transaction with references to full ada xml (target = resolve-refs)
    Apache ANT is based on Java and may be found here: https://ant.apache.org/
    run on command line or from a batch file: 
        ant [-f build.xml] [target]
        
    If you just run ant, it expects a build.xml in the working dir and runs the default target.
-->
<project basedir="." default="convert_ada_2_hl7_700" name="build-ada2hl7-jgz-700" xmlns:if="ant:if" xmlns:unless="ant:unless">
    <property name="is.version" value="7.0.0"/>
    <property name="is.version.short" value="700"/>
    <property name="date.T" value="2022-05-17"/>

    <!-- for now override this with the mp 910 version, until version 9 2.0 has been generated. -->
    <property name="ada.project.source.dir" value="C:\SVN\art_decor\trunk\ada-data\projects\jgz-7.0.0"/>


    <!-- place import after properties, otherwise it can't resolve the properties used. -->
    <import file="../../../_ant-buildfiles/ant-publish/build-ada2hl7-jgz-include.xml"/>

    <target name="setup_jgz700" description="Setup subdirectories, schemas, ada instance xml's in ${build.dir} for ${is.name} ${is.version}">
        
        <!-- dossieroverdracht-->
        <antcall target="setup_sub">
            <param name="usecase" value="${usecase.dob}"/>
            <param name="schema.string" value="*${usecase.dob}*.xsd"/>
            <param name="fileset.dir" value="ada_instance"/>
            <param name="fileset.include" value="*.xml"/>
            <param name="refs.ada.dir" value="ada_instance"/>
        </antcall>

    </target>

    <target name="convert_ada_2_hl7_700">

        <!-- convert JGZ dob -->
        <antcall target="convert_ada_2_hl7_sub">
            <param name="sub.build.dir" value="${build.dir}/${usecase.dob}"/>
            <param name="xsl.name" value="../${usecase.dob}/payload/${usecase.dob}_org.xsl"/>
            <param name="xsl.in" value="ada_instance"/>
            <param name="xsl.out" value="hl7_instance"/>
        </antcall>

    </target>
    
    <target name="convert_ada_2_hl7_700_test">
        
        <!-- convert JGZ dob -->
        <antcall target="convert_ada_2_hl7_sub">
            <param name="sub.build.dir" value="${build.dir}/${usecase.dob}"/>
            <param name="xsl.name" value="../${usecase.dob}/payload/${usecase.dob}_org.xsl"/>
            <param name="xsl.in" value="ada_instance_test"/>
            <param name="xsl.out" value="hl7_instance_test"/>
        </antcall>
        
    </target>
</project>
