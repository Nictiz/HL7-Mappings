                <fileset dir="${xsl.output}/fhir_long_roundtrip_test/1" includes="*.xml"/>
                <factory name="${xsl.saxon.class}"/>
                <classpath location="C:/SaxonHE9-9-1-7J/saxon9he.jar"/>
            </xslt>
            <xslt force="true" style="${build.dir}/../../../../ada_2_fhir/mp/9.0.7/${build.dir}/payload/${build.dir}_2_fhir.xsl" destdir="${xsl.output}/fhir_long_roundtrip_test/3" extension=".xml" useImplicitFileset="false">
