<?xml version="1.0" encoding="UTF-8"?>
<!-- Apache ANT build file that sets up (target = setup) or by default converts transaction with references to full ada xml (target = resolve-refs)
    Apache ANT is based on Java and may be found here: https://ant.apache.org/
    run on command line or from a batch file: 
        ant [-f build.xml] [target]
        
    If you just run ant, it expects a build.xml in the working dir and runs the default target.
-->
<project basedir="." default="convert_ada_2_hl7_peri236" name="build-ada2hl7-peri-236" xmlns:if="ant:if" xmlns:unless="ant:unless">
    <property name="is.version" value="2.3.6"/>
    <property name="is.version.short" value="236"/>
    <property name="date.T" value="2022-01-01"/>
    
    <property name="ada.project.source.dir" value="../../../../../../art_decor/projects/perinatologie-236"/>
    <property name="validate.dir" value="../../../../../../../../SVN/AORTA/branches/Onderhoud_Geboortezorg_v23/Publicaties/20220426/peri20-xml-20220426T100906/XML/schematron_closed_warnings"/>
    
    <property name="schema.careprv" value="../../../../../../../../../SVN/AORTA/trunk/XML/schemas_codeGen/REPC_IN004014NL.xsd"/>
    <property name="xsl.validate.svrl" value="../../../../../util/validate-svrl-output.xsl"/>
    
        
    <!-- place import after properties, otherwise it can't resolve the properties used. -->
    <import file="../../../_ant-buildfiles/ant-publish/build-ada2hl7-peri-include.xml"/>

    <target name="setup_peri236" description="Setup subdirectories, schemas, ada instance xml's in ${build.dir} for ${is.name} ${is.version}">

        <!-- generic stuff for all peri versions -->
        <antcall target="setup"/>
     
        <!-- let's convert to hl7 too while we're at it -->
        <antcall target="convert_ada_2_hl7_peri236"/>

    </target>

 
    <target name="convert_ada_2_hl7_peri236">

        <!-- generic stuff for all peri versions -->
        <antcall target="convert_ada_2_hl7"/>

    </target>

    <target name="schematronvalidate_peri_236">
        
        <!-- first the schematrons per instance -->
        <antcall target="validate_peri_236"/>
        
        <!-- now look at the results for conclusions -->
        <!-- kernset_geboortezorg -->
        <antcall target="schematronresults_sub">
            <param name="result.xml" value="${build.dir}/validate/hl7_${usecase.ks}.xml"/>
            <param name="input.dir" value="../ada_2_hl7/${is.abbreviation}/${is.version}/${usecase.ks}/validate_hl7_instance"/>
            <param name="input.fileset" value="*.xml"/>
        </antcall>
        
    </target>
    
    
    <target name="validate_peri_236">
        
        <!-- kernset_geboortezorg -->
        <antcall target="validate_hl7_sub">
            <param name="sub.build.dir" value="${build.dir}/${usecase.ks}"/>
            <param name="xsl.input" value="hl7_instance"/>
            <param name="xsl.output" value="validate_hl7_instance"/>
            <param name="xsl.mp" value="${validate.dir}/peri20-ksgz-alg-23.xsl"/>
        </antcall>
        
    </target>
    
    
    <target name="schemavalidate_hl7_236">
        
        <!-- all use cases cda_instance-->
        <antcall target="schemavalidate_hl7_sub">
            <param name="fileset.include" value="**/hl7_instance/*.xml"/>
            <param name="fileset.exclude" value="nictiz_test/**/*"/>
            <param name="validate.schema" value="${schema.careprv}"/>
        </antcall>
        
    </target>


 </project>
